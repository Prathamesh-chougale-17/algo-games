{
  "name": "algo-games",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build --turbopack",
    "start": "next start",
    "lint": "biome check",
    "format": "biome format --write",
    "algobuild": "pnpm rm @types/react-dom && algokit compile ts smart_contracts --output-source-map --out-dir artifacts && algokit generate client smart_contracts/artifacts --output {app_spec_dir}/{contract_name}Client.ts && pnpm add -D @types/react-dom",
    "deploy": "ts-node-dev --transpile-only --watch .env -r dotenv/config smart_contracts/index.ts",
    "deploy:ci": "ts-node --transpile-only -r dotenv/config smart_contracts/index.ts",
    "generate:app-clients": "algokit generate client smart_contracts/artifacts/hello_world --output components/HelloWorldClient.ts --language typescript",
    "generate:all-clients": "for d in smart_contracts/artifacts/*; do if [ -d \"$d\" ]; then cname=$(basename \"$d\"); algokit generate client $d --output components/${cname}.ts --language typescript; fi; done",
    "check-types": "tsc --noEmit"
  },
  "dependencies": {
    "@algorandfoundation/algokit-utils": "^9.1.2",
    "@algorandfoundation/algorand-typescript": "1.0.0-beta.72",
    "@blockshake/defly-connect": "^1.2.1",
    "@hookform/resolvers": "^5.2.1",
    "@txnlab/use-wallet-react": "^4.3.1",
    "algosdk": "^3.4.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cmdk": "^1.1.1",
    "date-fns": "^4.1.0",
    "embla-carousel-react": "^8.6.0",
    "input-otp": "^1.4.2",
    "lucide-react": "^0.541.0",
    "next": "15.5.0",
    "next-themes": "^0.4.6",
    "notistack": "^3.0.2",
    "radix-ui": "latest",
    "react": "19.1.0",
    "react-day-picker": "^9.9.0",
    "react-dom": "19.1.0",
    "react-hook-form": "^7.62.0",
    "react-resizable-panels": "^3.0.5",
    "recharts": "2.15.4",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.3.1",
    "vaul": "^1.1.2",
    "zod": "^4.1.1"
  },
  "devDependencies": {
    "@algorandfoundation/algokit-client-generator": "^6.0.0",
    "@algorandfoundation/algokit-utils-debug": "^1.0.4",
    "@algorandfoundation/puya-ts": "1.0.0-beta.72",
    "@biomejs/biome": "2.2.0",
    "@rollup/plugin-typescript": "^12.1.4",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19.1.12",
    "@types/react-dom": "^19.1.9",
    "dotenv": "^17.2.1",
    "tailwindcss": "^4",
    "ts-node-dev": "^2.0.0",
    "tw-animate-css": "^1.3.7",
    "typescript": "^5.9.2"
  }
}